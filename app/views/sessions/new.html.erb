<% if flash[:alert] %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <p ><%= flash[:alert] %></p>

    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>

<% end %>
<article class="form-signin w-100 m-auto">
  <%= form_with url: sign_in_path do |form|%>
  <h1 class="h3 mb-3 fw-normal">Sign In</h1>


    <div class="form-floating mt-3">
      <%= form.email_field :e_mail, class: 'form-control', placeholder: "name@example.com"%>
      <%= form.label :Email_address %>
    </div>

    <div class="form-floating mt-3">
      <%= form.password_field :password, class: 'form-control', placeholder: "Password" %>
      <%= form.label :password %>
    </div>



    <%= form.submit 'Sign In~!', class: 'btn btn-primary mt-5' %>
  <% end %>

</article>


